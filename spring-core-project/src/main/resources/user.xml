<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- User user=new User() -->
	<bean id="user"	class="com.rays.test.User">
		<property name="name" value="Ram"></property>
		<property name="address" value="Indore"></property>
	</bean>
	
	<!-- User user1=new User("Nidhi","USA") -->
	<bean id="user1" class="com.rays.test.User">
		<constructor-arg value="Akbar"></constructor-arg>
		<constructor-arg value="Delhi"></constructor-arg>
	</bean>
	
</beans>	
<!-- Bean class is used to create object and set values -->